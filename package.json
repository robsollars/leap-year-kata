{
  "name": "typescript-jest-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Charles Ahmadzadeh <superzadeh@outlook.com>",
  "scripts": {
    "test": "npm run compile && cross-env NODE_ENV=test jest",
    "test:ci": "npm test --ci --maxWorkers=2 --verbose --coverage",
    "test:watch": "npm test -- --watchAll",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint src/**/*.ts",
    "compile": "npm run lint && npm run compile:ts",
    "compile:watch": "npm run compile:ts -w",
    "compile:ts": "tsc --project tsconfig.json"
  },
  "devDependencies": {
    "@types/jest": "23.3.2",
    "@types/node": "10.10.3",
    "babel-core": "6.26.3",
    "babel-jest": "23.6.0",
    "cross-env": "5.2.0",
    "jest": "23.6.0",
    "ts-jest": "23.1.4",
    "ts-mockito": "^2.6.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.14.0",
    "typescript": "3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test)\\.(js|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "standard": {
    "env": [
      "node",
      "jest"
    ],
    "globals": [
      "expect"
    ]
  }
}
